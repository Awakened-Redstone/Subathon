<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.19/owo-ui.xsd">
    <components>
        <flow-layout direction="vertical">
            <children>
                <scroll direction="vertical">
                    <flow-layout direction="vertical" id="container">
                        <children>
                            <label>
                                <text translate="true">text.subathon.screen.rewards.tip</text>
                                <margins>
                                    <top>2</top>
                                    <bottom>2</bottom>
                                    <left>10</left>
                                </margins>
                            </label>
                            <flow-layout direction="vertical" id="reward-items">
                                <children/>
                            </flow-layout>
                        </children>
                        <margins>
                            <top>8</top>
                        </margins>
                        <padding>
                            <bottom>8</bottom>
                        </padding>
                    </flow-layout>
                    <sizing>
                        <horizontal method="fill">100</horizontal>
                        <vertical method="fill">90</vertical>
                    </sizing>
                </scroll>
                <flow-layout direction="horizontal">
                    <children>
                        <button id="the-button">
                            <text translate="true">text.subathon.screen.rewards.button.set</text>
                            <sizing>
                                <horizontal method="fixed">120</horizontal>
                            </sizing>
                        </button>
                        <button id="done">
                            <text translate="true">text.subathon.screen.rewards.button.done</text>
                            <margins>
                                <left>4</left>
                            </margins>
                            <sizing>
                                <horizontal method="fixed">120</horizontal>
                            </sizing>
                        </button>
                        <button id="edit">
                            <text translate="true">text.subathon.screen.rewards.button.edit</text>
                            <margins>
                                <left>4</left>
                            </margins>
                            <sizing>
                                <horizontal method="fixed">20</horizontal>
                            </sizing>
                        </button>
                    </children>
                    <positioning type="relative">50,99</positioning>
                    <margins>
                        <bottom>1</bottom>
                    </margins>
                </flow-layout>
            </children>
            <surface>
                <vanilla-translucent/>
            </surface>
        </flow-layout>
    </components>
    <templates>
        <reward>
            <flow-layout direction="horizontal" id="{{id}}">
                <children>
                    <texture texture="subathon:reward/{{id}}" texture-width="{{size}}" texture-height="{{size}}" region-width="{{size}}" region-height="{{size}}">
                        <margins>
                            <right>4</right>
                        </margins>
                        <sizing>
                            <horizontal method="fixed">16</horizontal>
                            <vertical method="fixed">16</vertical>
                        </sizing>
                    </texture>
                    <label>
                        <text>{{reward_name}}</text>
                        <margins>
                            <top>4</top>
                        </margins>
                    </label>
                </children>
                <sizing>
                    <horizontal method="fill">100</horizontal>
                </sizing>
                <padding>
                    <all>10</all>
                </padding>
                <margins>
                    <top>2</top>
                </margins>
            </flow-layout>
        </reward>
        <set-id>
            <flow-layout direction="horizontal">
                <children>
                    <flow-layout direction="horizontal" id="config-field">
                        <children/>
                    </flow-layout>
                </children>
                <margins>
                    <bottom>2</bottom>
                </margins>
                <padding>
                    <all>6</all>
                </padding>
                <surface>
                    <panel dark="true"/>
                </surface>
            </flow-layout>
        </set-id>
        <text-box-config-option>
            <template name="config-option">
                <child id="value-container">
                    <subathon-text-box id="value-box">
                        <text>{{config-option-value}}</text>
                    </subathon-text-box>
                </child>
            </template>
        </text-box-config-option>
        <config-option>
            <flow-layout direction="horizontal">
                <children>
                    <label id="option-name">
                        <text translate="true">{{config-option-name}}</text>
                        <positioning type="relative">0,50</positioning>
                        <shadow>true</shadow>
                    </label>

                    <flow-layout direction="horizontal">
                        <children>
                            <template-child id="value-container">
                                <sizing>
                                    <horizontal method="fixed">240</horizontal>
                                </sizing>
                            </template-child>
                        </children>

                        <positioning type="relative">100,50</positioning>
                        <vertical-alignment>center</vertical-alignment>
                    </flow-layout>
                </children>

                <sizing>
                    <horizontal method="fixed">240</horizontal>
                    <vertical method="fixed">32</vertical>
                </sizing>

                <padding>
                    <all>5</all>
                </padding>

            </flow-layout>
        </config-option>
    </templates>
</owo-ui>
