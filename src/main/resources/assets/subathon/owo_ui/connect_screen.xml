<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.19/owo-ui.xsd">
    <components>
        <flow-layout direction="vertical">
            <children>
                <label id="account">
                    <text translate="true"/>
                    <positioning type="relative">100,0</positioning>
                    <margins>
                        <top>4</top>
                        <right>4</right>
                    </margins>
                </label>
                <scroll direction="vertical">
                    <flow-layout direction="vertical" id="connect-items">
                        <children>
                            <template name="connection"><text>core</text></template>
                            <template name="connection"><text>subs</text></template>
                            <template name="connection"><text>resubs</text></template>
                            <template name="connection"><text>gifts</text></template>
                            <template name="connection"><text>bits</text></template>
                            <template name="connection"><text>channel_points</text></template>
                        </children>
                        <margins>
                            <top>8</top>
                        </margins>
                    </flow-layout>
                    <sizing>
                        <horizontal method="fill">100</horizontal>
                        <vertical method="fill">90</vertical>
                    </sizing>
                </scroll>

                <flow-layout direction="horizontal">
                    <children>
                        <button id="connect-button">
                            <text translate="true">text.subathon.screen.connect.button.connect</text>
                            <sizing>
                                <horizontal method="fill">90</horizontal>
                            </sizing>
                        </button>
                        <button id="sandwich">
                            <text>≡</text>
                            <sizing>
                                <horizontal method="fixed">20</horizontal>
                            </sizing>
                            <margins>
                                <left>4</left>
                            </margins>
                        </button>
                    </children>
                    <positioning type="relative">50,100</positioning>
                    <margins>
                        <bottom>4</bottom>
                    </margins>
                </flow-layout>
            </children>
            <surface>
                <vanilla-translucent/>
            </surface>
        </flow-layout>
    </components>
    <templates
    >
        <connection>
            <flow-layout direction="horizontal" id="connect.{{text}}">
                <children>
                    <label id="status">
                        <text translate="true">text.subathon.screen.connect.offline</text>
                        <sizing>
                            <horizontal method="fixed">9</horizontal>
                            <vertical method="fixed">9</vertical>
                        </sizing>
                    </label>
                    <label>
                        <text translate="true">text.subathon.screen.connect.{{text}}</text>
                    </label>
                </children>
                <sizing>
                    <horizontal method="fill">100</horizontal>
                </sizing>
                <padding>
                    <all>10</all>
                </padding>
                <margins>
                    <top>2</top>
                    <right>3</right>
                </margins>
            </flow-layout>
        </connection>
        <extra-options>
            <flow-layout direction="vertical" id="extra-options">
                <children>
                    <button id="disconnect">
                        <text translate="true">text.subathon.screen.connect.button.disconnect</text>
                        <margins>
                            <bottom>2</bottom>
                        </margins>
                        <sizing>
                            <horizontal method="fixed">100</horizontal>
                        </sizing>
                    </button>
                    <button id="reconnect">
                        <text translate="true">text.subathon.screen.connect.button.reconnect</text>
                        <margins>
                            <bottom>2</bottom>
                        </margins>
                        <sizing>
                            <horizontal method="fixed">100</horizontal>
                        </sizing>
                    </button>
                    <button id="reset-cache">
                        <text translate="true">text.subathon.screen.connect.button.reset_cache</text>
                        <sizing>
                            <horizontal method="fixed">100</horizontal>
                        </sizing>
                        <margins>
                            <bottom>2</bottom>
                        </margins>
                    </button>
                    <button id="reset-key">
                        <text translate="true">text.subathon.screen.connect.button.reset_key</text>
                        <sizing>
                            <horizontal method="fixed">100</horizontal>
                        </sizing>
                    </button>
                </children>
                <padding>
                    <all>6</all>
                </padding>
                <margins>
                    <right>8</right>
                    <bottom>28</bottom>
                </margins>
                <surface>
                    <panel dark="true"/>
                </surface>
                <z-index>15</z-index>
                <positioning type="relative">100,100</positioning>
            </flow-layout>
        </extra-options>
        <twitch-username>
            <flow-layout direction="horizontal" id="twitch-username">
                <children>
                    <button id="confirm">
                        <text>✔</text>
                        <sizing>
                            <horizontal method="fixed">20</horizontal>
                        </sizing>
                        <margins>
                            <top>1</top>
                            <left>2</left>
                        </margins>
                    </button>
                    <button id="cancel">
                        <text>❌</text>
                        <sizing>
                            <horizontal method="fixed">20</horizontal>
                        </sizing>
                        <margins>
                            <top>1</top>
                            <left>2</left>
                        </margins>
                    </button>
                </children>
                <padding>
                    <all>6</all>
                </padding>
                <margins>
                    <right>8</right>
                    <bottom>28</bottom>
                </margins>
                <surface>
                    <panel dark="true"/>
                </surface>
                <z-index>50</z-index>
                <positioning type="relative">50,50</positioning>
            </flow-layout>
        </twitch-username>
        <text-box-config-option>
            <template name="config-option">
                <child id="value-container">
                    <subathon-text-box id="value-box">
                        <text>{{config-option-value}}</text>
                    </subathon-text-box>
                </child>
            </template>
        </text-box-config-option>
        <config-option>
            <flow-layout direction="horizontal">
                <children>
                    <label id="option-name">
                        <text translate="true">{{config-option-name}}</text>
                        <positioning type="relative">0,50</positioning>
                        <shadow>true</shadow>
                    </label>

                    <flow-layout direction="horizontal">
                        <children>
                            <template-child id="value-container">
                                <sizing>
                                    <horizontal method="fixed">120</horizontal>
                                </sizing>
                            </template-child>

                            <button id="reset-button">
                                <text>⇄</text>
                                <margins>
                                    <horizontal>5</horizontal>
                                </margins>
                            </button>
                        </children>

                        <positioning type="relative">100,50</positioning>
                        <vertical-alignment>center</vertical-alignment>
                    </flow-layout>
                </children>
                <sizing>
                    <horizontal method="fixed">240</horizontal>
                    <vertical method="fixed">32</vertical>
                </sizing>
                <padding>
                    <all>5</all>
                </padding>
            </flow-layout>
        </config-option>
    </templates>
</owo-ui>
